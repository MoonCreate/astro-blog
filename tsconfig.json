{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "#root/*": ["src/*"],
      "#components/*": ["src/components/*"],
      "#layouts/*": ["src/layouts/*"],
      "#content/*": ["src/content/*"],
      "#styles/*": ["src/styles/*"],
      "#helper/*": ["src/helper/*"],
      "#hooks/*": ["src/hooks/*"],
      "#animations/*": ["src/animations/*"],
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
